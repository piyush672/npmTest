{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015", "es2017"],
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  